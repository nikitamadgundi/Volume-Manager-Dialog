<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:id="@+id/manage_volume"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Volume"
        android:textSize="24sp"
        android:gravity="center"
        android:padding="16dp" />

    <TextView
        android:id="@+id/media_message"
        app:layout_constraintTop_toBottomOf="@+id/manage_volume"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adjust media volume:"
        android:textSize="18sp"
        android:padding="16dp" />
    <ImageView
        android:id="@+id/img_Media"
        app:layout_constraintTop_toBottomOf="@id/media_message"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_baseline_music_note_24"
        android:layout_marginLeft="16dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <SeekBar
        android:id="@+id/media_seekbar"
        app:layout_constraintTop_toBottomOf="@+id/media_message"
        app:layout_constraintLeft_toRightOf="@id/img_Media"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="0"
        android:padding="16dp" />

    <TextView
        android:id="@+id/alarm_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:padding="16dp"
        android:text="Adjust alarm volume:"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/media_seekbar" />
    <ImageView
        android:id="@+id/img_alaram"
        app:layout_constraintTop_toBottomOf="@id/alarm_message"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_baseline_access_alarm_24"
        android:layout_marginLeft="16dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <SeekBar
        android:id="@+id/alarm_seekbar"
        app:layout_constraintTop_toBottomOf="@+id/alarm_message"
        app:layout_constraintLeft_toRightOf="@id/img_alaram"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="0"
        android:padding="16dp" />

    <TextView
        android:id="@+id/notification_message"
        app:layout_constraintTop_toBottomOf="@+id/alarm_seekbar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adjust notification volume:"
        android:textSize="18sp"
        android:padding="16dp" />
   <ImageView
    android:id="@+id/img_Notification"
    app:layout_constraintTop_toBottomOf="@id/notification_message"
    app:layout_constraintLeft_toLeftOf="parent"
    android:src="@drawable/ic_baseline_notifications_24"
       android:layout_marginLeft="16dp"
    android:layout_width="40dp"
    android:layout_height="40dp"/>


    <SeekBar
        android:id="@+id/notification_seekbar"
        app:layout_constraintTop_toBottomOf="@+id/notification_message"
        app:layout_constraintLeft_toRightOf="@id/img_Notification"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="0"
        android:padding="16dp" />

    <TextView
        android:id="@+id/ringtone_message"
        app:layout_constraintTop_toBottomOf="@+id/notification_seekbar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adjust ringtone volume:"
        android:textSize="18sp"
        android:padding="16dp" />
   <ImageView
    android:id="@+id/img_ringtone"
    app:layout_constraintTop_toBottomOf="@id/ringtone_message"
    app:layout_constraintLeft_toLeftOf="parent"
    android:src="@drawable/ic_baseline_ring_volume_24"
    android:layout_marginLeft="16dp"
    android:layout_width="40dp"
    android:layout_height="40dp"/>


    <SeekBar
        android:id="@+id/ringtone_seekbar"
        app:layout_constraintTop_toBottomOf="@+id/ringtone_message"
        app:layout_constraintLeft_toRightOf="@id/img_ringtone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="0"
        android:padding="16dp" />
    <Button
        android:id="@+id/btnSet"
        app:layout_constraintTop_toBottomOf="@+id/ringtone_seekbar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="300dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SET"/>

</androidx.constraintlayout.widget.ConstraintLayout>